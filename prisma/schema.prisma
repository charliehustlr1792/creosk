generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  brand       String?
  price       Float
  imageUrl    String
  category    String
  occasions   String[]
  vibes       String[]
  skinTones   String[]
  description String?
  aiReason    String?
  inStock     Boolean  @default(true)
  createdAt   DateTime @default(now())
}

model TryOnSession {
  id             String   @id @default(cuid())
  personImageUrl String?
  clothingId     String
  resultImageUrl String?
  status         String   @default("pending")
  createdAt      DateTime @default(now())
}

model LeadCapture {
  id        String   @id @default(cuid())
  contact   String
  productId String?
  createdAt DateTime @default(now())
}